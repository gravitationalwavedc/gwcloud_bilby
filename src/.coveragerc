[run]
# Only measure coverage for code in the current directory (project code), not dependencies
source = .
# Required for parallel coverage: track child processes spawned by Django's --parallel
parallel = true
concurrency = multiprocessing,thread
omit =
    # Omit the virtual env
    */venv/*
    .venv/*

    # Ignore manage.py files
    ./*manage.py

    # Ignore settings.py files
    gw_bilby/*settings.py

    # Ignore local.py if one exists
    gw_bilby/local.py

    # Ignore environment and base settings
    gw_bilby/base.py
    gw_bilby/environment.py
